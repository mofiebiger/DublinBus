server {
	server_name dublin-bus.tk www.dublin-bus.tk;

	index index.html;

	location = /favicon.ico {access_log off; log_not_found off; }
	location /static/ {
		root /home/student/DublinBus/dbbus;
	}
	
	location / {
		include proxy_params;
		proxy_pass http://unix:/home/student/DublinBus/dbbus/dbbus.sock;
	}


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/dublin-bus.tk/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/dublin-bus.tk/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.dublin-bus.tk) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = dublin-bus.tk) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80;
	server_name dublin-bus.tk www.dublin-bus.tk;
    return 404; # managed by Certbot




}